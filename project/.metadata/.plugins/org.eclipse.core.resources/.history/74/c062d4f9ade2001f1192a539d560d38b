package topic01;

public class priceTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		float miles =0f;
		float total=0f;
		
		miles = 1000f;
		System.out.println("miles: \t\t\t\t"+miles);
		
		float milesDiff = miles -1000f;
		System.out.println("milesDiff: \t\t\t"+milesDiff);
		
		float milesDiffBy300 = milesDiff/300f;
		System.out.println("milesDiffBy300: \t\t"+ milesDiffBy300);
		
		float milesDiffBy300AfterConvert=0;
		milesDiffBy300AfterConvert = (int)milesDiffBy300;
		System.out.println("milesDiffBy300AfterConvert: \t"+milesDiffBy300AfterConvert);
		
		total= miles <=1000f  ? 80: ( (int)milesDiffBy300<0 ? 1 : (int)milesDiffBy300+1 )*10 +80;
		System.out.println("total: \t\t\t\t"+total);
		
	}

}
